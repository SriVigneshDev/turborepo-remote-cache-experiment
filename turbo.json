{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "biome-check:ci": {
      "cache": false,
      "outputs": []
    },
    "pre-build-checks:ci": {
      "dependsOn": ["//#biome-check:ci", "type-check"],
      "cache": false
    }
  }
}
