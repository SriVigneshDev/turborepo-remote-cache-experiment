{
  "name": "turborepo-remote-cache-experiment",
  "private": true,
  "scripts": {
    "dev": "dotenv -- turbo dev",
    "build": "dotenv -- turbo build",
    "build:prod": "turbo build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "check:strict": "biome check --write --no-ignore .",
    "check:no-disable": "node scripts/check-no-disable.mjs",
    "validate": "pnpm check:no-disable && pnpm check:strict",
    "prepare": "husky",
    "check-types": "dotenv -- turbo run type-check",
    "pre-build-checks:ci": "turbo run pre-build-checks:ci",
    "biome-check:ci": "biome check .",
    "commit": "czg",
    "knip": "knip --no-config-hints",
    "knip:fix": "knip --fix",
    "lighthouse:web": "unlighthouse --site http://localhost:3000",
    "lighthouse:docs": "unlighthouse --site http://localhost:3001"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@repo/biome-config": "workspace:*",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "knip": "^5.76.3",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3",
    "typescript": "5.9.2",
    "unlighthouse": "^0.17.4"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
